@model StoreApp_lab1_bd.Models.OrderItem

@{
    ViewData["Title"] = "Delete Order Item";
}

<h1>Delete Order Item</h1>

<h3>Are you sure you want to delete this order item?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">Order ID</dt>
        <dd class="col-sm-9">@Model.OrderId</dd>

        <dt class="col-sm-3">Product</dt>
        <dd class="col-sm-9">@(Model.Product?.Name ?? "N/A")</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Quantity)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Quantity)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Price)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Price)</dd>

        <dt class="col-sm-3">Total</dt>
        <dd class="col-sm-9">@((Model.Quantity * Model.Price).ToString("C"))</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Details)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Details)</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>